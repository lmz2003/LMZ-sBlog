  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "pagefind": "^1.3.0",
    "prettier-plugin-organize-imports": "^4.1.0",
    "sass": "^1.76.0",
    "typescript": "^5.4.5",
    "vitepress": "1.6.3"
  },
  "pnpm": {
    "peerDependencyRules": {
